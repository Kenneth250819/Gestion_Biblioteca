@model IEnumerable<Gestion_Biblioteca.Models.Libros>

@{
    ViewData["Title"] = "Lista de Libros";
}

<h1>@ViewData["Title"]</h1>
<div class="mb-4">
    <form asp-action="Index" method="get" class="row g-3 align-items-end">
        <div class="col-md-3">
            <label for="titulo" class="form-label">Buscar por Título</label>
            <input type="text" name="titulo" value="@ViewBag.Titulo" class="form-control" placeholder="Ingrese título..." />
        </div>
        <div class="col-md-3">
            <label for="autor" class="form-label">Buscar por Autor</label>
            <input type="text" name="autor" value="@ViewBag.Autor" class="form-control" placeholder="Ingrese autor..." />
        </div>
        <div class="col-md-6 d-flex flex-wrap gap-2">
            <div class="flex-grow-1">
                <button type="submit" class="btn btn-success w-100">Buscar</button>
            </div>
            <div class="flex-grow-1">
                <a asp-action="Index" class="btn btn-secondary w-100">Limpiar</a>
            </div>
            <div class="flex-grow-1">
                <a asp-action="Create" class="btn btn-primary w-100">Agregar Libro</a>
            </div>
            <div class="flex-grow-1">
                <a asp-controller="Prestamo" asp-action="Create" class="btn btn-primary w-100">Agregar Préstamo</a>
            </div>
            <div class="flex-grow-1">
                <a asp-controller="Prestamo" asp-action="Index" class="btn btn-primary w-100">Ver Préstamo</a>
            </div>
            <div class="flex-grow-1">
                <a asp-controller="Usuario" asp-action="Index" class="btn btn-primary w-100">Ver Usuarios</a>
            </div>
            <div class="flex-grow-1">
                <a asp-action="ExportToPdf" class="btn btn-outline-danger w-100">Exportar a PDF</a>
            </div>
            <div class="flex-grow-1">
                <a asp-action="ExportToExcel" class="btn btn-outline-success w-100">Exportar a Excel</a>
            </div>
        </div>
    </form>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Editorial</th>
            <th>ISBN</th>
            <th>Año</th>
            <th>Categoría</th>
            <th>Existencias</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var libro in Model)
        {
            <tr>
                <td>@libro.Titulo</td>
                <td>@libro.Autor</td>
                <td>@libro.Editorial</td>
                <td>@libro.ISBN</td>
                <td>@libro.Anio</td>
                <td>@libro.Categoria</td>
                <td>@libro.Existencias</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@libro.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@libro.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    <a asp-action="Details" asp-route-id="@libro.Id" class="btn btn-sm btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
