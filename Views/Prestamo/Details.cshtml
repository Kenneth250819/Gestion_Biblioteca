@model Gestion_Biblioteca.Models.Prestamos

@{
    ViewData["Title"] = "Detalles del Préstamo";
}

<h2>Detalles del Préstamo</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">ID Usuario</dt>
        <dd class="col-sm-9">@Model.IdUsuario</dd>

        <dt class="col-sm-3">ID Libro</dt>
        <dd class="col-sm-9">@Model.IdLibro</dd>

        <dt class="col-sm-3">Fecha de Devolución Esperada</dt>
        <dd class="col-sm-9">@Model.FechaDevolucionEsperada.ToShortDateString()</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@Model.Estado</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
