@model Gestion_Biblioteca.Models.Usuarios

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>¿Estás seguro de que deseas eliminar este usuario?</h2>

<div>
    <h4>@Model.Nombre @Model.Apellido</h4>
    <dl class="row">
        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.Correo</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>

        <dt class="col-sm-2">Tipo de Usuario</dt>
        <dd class="col-sm-10">@Model.TipoUsuario</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
