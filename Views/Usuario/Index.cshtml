@model IEnumerable<Gestion_Biblioteca.Models.Usuarios>

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Lista de Usuarios</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Usuario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.First().Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.First().Correo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.First().TipoUsuario)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.Apellido</td>
                <td>@usuario.Correo</td>
                <td>@usuario.Telefono</td>
                <td>@usuario.TipoUsuario</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-sm btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
